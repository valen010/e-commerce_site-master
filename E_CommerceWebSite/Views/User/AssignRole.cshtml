
@{
    ViewBag.Title = "AssignRole";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading">
               Assign role
            </header>
            <div class="panel-body">
                <form action="/User/AssignRole" role="form" method="post">
                    <div class="form-group">
                        <label for="exampleInputEmail1">User Name </label>
                        <select name="UserName">
                            @foreach (MembershipUser mu in ViewBag.Users)
                             {
                                <option value="@mu.UserName">@mu.UserName</option>
                             }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">Role:</label>
                        <select name="RoleName">
                            @foreach (string role in ViewBag.Roles)
                             {
                                <option value="@role">@role</option>
                             }

                        </select>
                    </div>
                    <button type="submit" class="btn btn-info">Submit</button>
                </form>
                <span id="error">@ViewBag.message</span>

            </div>
        </section>

    </div>
</div>