
@{
    ViewBag.Title = "PropertyValues";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@model IEnumerable<E_CommerceWebSite.Models.PropertyValue>

        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
              Property Values
            </header>
            <div class="panel-body">
                <div class="adv-table editable-table ">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a href="/Admin/AddPropertyValue">
                                New Property Value <i class="icon-plus"></i>
                            </a>
                        </div>
                        <div class="btn-group pull-right">
                            <button class="btn dropdown-toggle" data-toggle="dropdown">
                                Tools <i class="icon-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#">Print</a></li>
                                <li><a href="#">Save as PDF</a></li>
                                <li><a href="#">Export to Excel</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="space15"></div>
                    <table class="table table-striped table-hover table-bordered" id="editable-sample">
                        <thead>
                            <tr>
                                <th>Property Name</th>
                                <th>Description</th>

                                <th>Propert Type</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var value in Model)
                            {
                                <tr class="">
                                    <td>@value.Name</td>
                                    <td>@value.Description</td>
                                    @if (value.PropertyType != null)
                                    {
                                        <td>@value.PropertyType.Name</td>
                                    }


                                    <td><a class="edit" href="/Admin/PropertyValueUpdate/@value.Id"><i class="icon-pencil"></i></a></td>
                                    <td><a class="delete" href="/Admin/PropertyValueDelete/@value.Id"><i class="icon-trash"></i></a></td>
                                </tr>


                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </section>
        <!-- page end-->

