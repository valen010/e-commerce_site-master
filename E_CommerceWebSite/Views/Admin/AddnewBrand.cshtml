
@{
    ViewBag.Title = "AddnewBrand";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                 New Brand
            </header>
            <div class="panel-body">
                <div class=" form">
                    <form class="cmxform form-horizontal tasi-form" id="commentForm" method="post" action="/Admin/AddNewBrand" enctype="multipart/form-data">
                        <div class="form-group ">
                            <label for="cname" class="control-label col-lg-2">Brand Name</label>
                            <div class="col-lg-10">
                                <input class=" form-control" id="cname" name="Name" minlength="2" type="text" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <label for="cemail" class="control-label col-lg-2">Describtion</label>
                            <div class="col-lg-10">
                                <input class="form-control " id="cemail" type="text" name="Description"  />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3">Default</label>
                            <div class="col-md-4">
                                <input type="file" class="default" name="FileUpload" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-danger" type="submit">Save</button>
                                <button class="btn btn-default" type="button">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>

            </div>
        </section>
    </div>
</div>
