
@{
    ViewBag.Title = "ProductProperties";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
@model IEnumerable<E_CommerceWebSite.Models.ProductProperty>



        <!-- page start-->
        <section class="panel">
            <header class="panel-heading">
                Product Properties
            </header>
            <div class="panel-body">
                <div class="adv-table editable-table ">
                    <div class="clearfix">
                        <div class="btn-group">
                            <a href="/Admin/AddProductProperty">
                                New Product Property <i class="icon-plus"></i>
                            </a>
                        </div>
                        <div class="btn-group pull-right">
                            <button class="btn dropdown-toggle" data-toggle="dropdown">
                                Tools <i class="icon-angle-down"></i>
                            </button>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#">Print</a></li>
                                <li><a href="#">Save as PDF</a></li>
                                <li><a href="#">Export to Excel</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="space15"></div>
                    <table class="table table-striped table-hover table-bordered" id="editable-sample">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Property Type</th>
                                <th>Property Value Name</th>
                                <th>Update</th>
                                <th>Delete</th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var property in Model)
                            {
                                <tr class="">
                                    @if (property.Products != null)
                                    {
                                        <td>@property.Products.ProductName</td>
                                    }
                                    @if (property.PropertyType != null)
                                    {
                                        <td>@property.PropertyType.Name</td>
                                    }
                                    @if (property.PropertyValue != null)
                                    {
                                        <td>@property.PropertyValue.Name</td>
                                    }
                                    <td><a class="edit" href="#"><i class="icon-pencil"></i></a></td>

                                    @if (property.Products != null && property.PropertyType != null && property.PropertyValueID != null)
                                    {
                                        <td><a class="delete" href='@Url.Action("ProductPropertyDelete","Admin",new {productId=property.ProductID,valueId=property.PropertyValueID,typeId=property.PropertyTypeID})'><i class="icon-trash"></i></a></td>
                                    }

                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>
        </section>

