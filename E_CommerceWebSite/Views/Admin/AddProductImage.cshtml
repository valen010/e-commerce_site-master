
@{
    ViewBag.Title = "AddProductImage";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<form action="/Admin/AddProductImage" method="post" enctype="multipart/form-data" class="">
    <input type="hidden" name="uId" value="@Model" />
    <div class="form-group">
        <label class="control-label col-md-3">Without input</label>
        <div class="controls col-md-9">
            <div class="fileupload fileupload-new" data-provides="fileupload">
                <span class="btn btn-white btn-file">
                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Select file</span>
                    <span class="fileupload-exists"><i class="icon-undo"></i> Change</span>
                    <input type="file" class="default" name="fileUpload" />
                </span>
                <span class="fileupload-preview" style="margin-left:5px;"></span>
                <a href="#" class="close fileupload-exists"
                   data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
            </div>
        </div>
    </div>

    <input class="btn-btn success" type="submit" name="name" value="Submit" />




</form>